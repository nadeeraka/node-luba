<%- include('../layouts/header.ejs') %> <%- include('../layouts/nav.ejs') %>

<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/dist/img/login-icon.png" alt="login logo" class="logo" />
      <h3 class="text-center mt-3">User Login</h3>
      <%if (!e) { %>
      <p></p>
      <%} else { %>
      <p class="alert alert-danger">Errors found</p>
      <% for(let err of e){ %>
      <li class="alert alert-danger"><%= err.text %></li>

      <% }%> <% }%>
      <form action="/user/login" method="POST" novalidate class="form-group">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            class="form-control"
            type="password"
            name="password"
            required
          />
        </div>
        <button type="submit" class="btn btn-success">Login</button>
      </form>
    </div>
  </div>
</div>
<%- include('../layouts/footer.ejs') %>
